@model FarmToFork.Models.Tag
<div class="container-fluid p-3">
    <div class="row">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" class="form-control border-danger"  asp-for="Name">
                <span class="text-danger fs-6" asp-validation-for="Name"></span>
            </div>
            <button class="btn btn-primary w-100 mt-4" type="submit">Update Tag</button>
        </form>
    </div>
</div>  