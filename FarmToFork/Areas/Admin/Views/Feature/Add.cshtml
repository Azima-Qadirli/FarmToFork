@model FarmToFork.Models.Feature
<div class="container-fluid p-3">
<div class="row">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input type="text" class="form-control border-danger"  asp-for="Title">
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control border-danger" asp-for="Description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Icon" class="form-label">Icon</label>
            <input type="text" class="form-control border-danger" asp-for="Icon">
        </div>
        <button class="btn btn-primary w-100 mt-4" type="submit">Add  Feature</button>
    </form>
</div>
</div>  